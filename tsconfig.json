{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "outDir": "lib",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "checkJs": false,
    "inlineSourceMap": true,
    "incremental": true,
    "lib": ["ESNext"],
    "module": "esnext",
    "target": "esnext",
    "jsx": "react",
    "types": ["bun-types"]
  },
  "rules": {
    "semicolon": [ true, "always" ]
  },
  "include": ["ui/app/**/*", "cli/**/*", "performance_tests/**/*"],
  "files": [
    "typings/index.d.ts",
    "node_modules/@types/nw.gui/index.d.ts"
  ]
}
